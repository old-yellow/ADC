<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        </FrameLayout>

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:bnbActiveColor="@color/colorRed"
            app:bnbAutoHideEnabled="true"
            app:bnbBackgroundColor="@color/colorWhite"
            app:bnbInactiveColor="@color/colorBlack" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@color/colorPink">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/icon_img"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/nav_icon"/>

                    <ImageButton
                        android:id="@+id/scan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_settings"/>

                    <ImageButton
                        android:id="@+id/purse"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@id/scan"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_menu" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_img"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:text="老黄瓜片儿"
                        />

                    <TextView
                        android:id="@+id/user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:background="@drawable/text_view_edge"
                        android:layout_toRightOf="@+id/user_name"
                        android:layout_alignBottom="@id/user_name"
                        android:text="Lv.3"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/vip_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPink"
                        android:textSize="12sp"
                        android:background="@drawable/text_view_edge2"
                        android:layout_toRightOf="@+id/user_level"
                        android:layout_alignBottom="@id/user_level"
                        android:text="正式会员"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/b_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_name"
                        android:layout_marginTop="10dp"
                        android:text="B币: "
                        android:textColor="@color/colorWhite2"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/b_coin_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_name"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/b_coin"
                        android:layout_marginLeft="5dp"
                        android:text="0.0"
                        android:textColor="@color/colorWhite2"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_name"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/b_coin_number"
                        android:layout_marginLeft="10dp"
                        android:text="硬币: "
                        android:textColor="@color/colorWhite2"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/coin_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_name"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/coin"
                        android:layout_marginLeft="5dp"
                        android:text="211.0"
                        android:textColor="@color/colorWhite2"
                        android:textSize="15sp"/>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/top_vip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@color/colorRed" />

                <include layout="@layout/nav_persional_layout" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/nav_items"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </ScrollView>


        <include layout="@layout/nav_settings_layout" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>

